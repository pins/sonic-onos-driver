<drivers>
    <driver name="sonic" manufacturer="Open Networking Foundation"
            hwVersion="master" swVersion="Sonic" extends="p4runtime,gnmi">
        <behaviour api="org.onosproject.net.behaviour.PiPipelineProgrammable"
                   impl="org.onosproject.drivers.sonic.SonicPipelineProgrammable"/>
        <behaviour api="org.onosproject.net.device.DeviceHandshaker"
                   impl="org.onosproject.drivers.sonic.SonicHandshaker"/>
        <behaviour api="org.onosproject.net.device.DeviceDescriptionDiscovery"
                   impl="org.onosproject.drivers.sonic.SonicOpenConfigGnmiDeviceDescriptionDiscovery"/>
        <behaviour api="org.onosproject.net.device.PortStatisticsDiscovery"
                   impl="org.onosproject.drivers.sonic.SonicOpenConfigGnmiPortStatisticsDiscovery"/>
       <behaviour api="org.onosproject.net.behaviour.PortAdmin"
                  impl="org.onosproject.drivers.sonic.SonicOpenConfigGnmiPortAdminBehaviour"/>
        <property name="supportTableCounters">false</property>
        <property name="tableReadCountersWithTableEntries">false</property>
        <property name="tableWildcardReads">true</property>
        <property name="supportDefaultTableEntry">false</property>
    </driver>
</drivers>
